let fp_mul_x0_hi',
    fp_mul_x0_lo',
    fp_mul_0x_hi',
    fp_mul_0x_lo' =
  let proof = SIMP_TAC[fp_mul_x0_eq; fp_mul_0x_eq; REAL_LE_REFL] in
