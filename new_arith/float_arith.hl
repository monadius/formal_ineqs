    r `(m2 = zero_num <=> T) ==> fp s1 m1 e1 * fp s2 m2 e2 <= fp F 0 (pos_int 0)`,
    r `(m2 = zero_num <=> T) ==> fp F 0 (pos_int 0) <= fp s1 m1 e1 * fp s2 m2 e2`,
    r `(m1 = zero_num <=> T) ==> fp s1 m1 e1 * fp s2 m2 e2 <= fp F 0 (pos_int 0)`,
